#!/usr/bin/env bash
# Script: 10-process_and_pid_file

PIDFILE="/var/run/myscript.pid"

# Create PID file
echo $$ > "$PIDFILE"

# SIGINT handler (Ctrl+C) — just prints a message
sigint_handler() {
    echo "Y U no love me?!"
}

# SIGTERM handler — prints a message, deletes PID file, then exits
sigterm_handler() {
    echo "I hate the kill command"
    rm -f "$PIDFILE"
    exit 0
}

# SIGQUIT handler — deletes PID file and exits silently
sigquit_handler() {
    rm -f "$PIDFILE"
    exit 0
}

# Trap signals
trap 'sigint_handler' SIGINT
trap 'sigterm_handler' SIGTERM
trap 'sigquit_handler' SIGQUIT

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
