#!/usr/bin/env bash
# Script: 10-process_and_pid_file
# Handles signals correctly with PID file management

PIDFILE="/var/run/myscript.pid"

# Function to handle SIGTERM: print message then cleanup and exit
sigterm_handler() {
    echo "I hate the kill command"
    rm -f "$PIDFILE"
    exit 0
}

# Function to handle SIGINT (Ctrl+C)
sigint_handler() {
    echo "Y U no love me?!"
}

# Function to handle SIGQUIT: cleanup and exit
sigquit_handler() {
    rm -f "$PIDFILE"
    exit 0
}

# Trap signals
trap 'sigterm_handler' SIGTERM
trap 'sigint_handler' SIGINT
trap 'sigquit_handler' SIGQUIT

# Save PID to the file
echo $$ > "$PIDFILE"

# Infinite loop printing the message
while true; do
    echo "To infini
