#!/usr/bin/env bash
# Script: 10-process_and_pid_file

PIDFILE="/var/run/myscript.pid"

# Create PID file
echo $$ > "$PIDFILE"

# SIGINT handler (Ctrl+C)
sigint_handler() {
    echo "Y U no love me?!"
}

# SIGTERM handler (from pkill/kill)
sigterm_handler() {
    echo "I hate the kill command"
}

# SIGQUIT handler: clean up and exit
sigquit_handler() {
    rm -f "$PIDFILE"
    exit 0
}

# Trap signals
trap 'sigint_handler' SIGINT
trap 'sigterm_handler' SIGTERM
trap 'sigquit_handler' SIGQUIT

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
