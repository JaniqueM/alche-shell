#!/usr/bin/env bash
# Script: 3-show_your_bash_pid_made_easy
# Display PID and process name for processes containing 'bash', without using ps

for pid_dir in /proc/[0-9]*; do
    pid=$(basename "$pid_dir")
    if [[ -r "$pid_dir/comm" ]]; then
        name=$(<"$pid_dir/comm")
        if [[ "$name" == *bash* ]]; then
            echo "$pid $name"
        fi
    fi
done
