#!/usr/bin/env bash
# Script: 11-manage_my_process
# Init-style script to manage manage_my_process

PIDFILE="/var/run/my_process.pid"
PROCESS_CMD="$(pwd)/manage_my_process"

case "$1" in
    start)
        # Start the process in background
        $PROCESS_CMD &
        PID=$!
        echo $PID > "$PIDFILE"
        echo "manage_my_process started"
        ;;
    stop)
        if [[ -f "$PIDFILE" ]]; then
            PID=$(cat "$PIDFILE")
            kill "$PID" 2>/dev/null
            rm -f "$PIDFILE"
        fi
        echo "manage_my_process stopped"
        ;;
    restart)
        # Stop first if running
        if [[ -f "$PIDFILE" ]]; then
            PID=$(cat "$PIDFILE")
            kill "$PID" 2>/dev/null
            rm -f "$PIDFILE"
        fi
        # Start again
        $PROCESS_CMD &
        PID=$!
        echo $PID > "$PIDFILE"
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac
